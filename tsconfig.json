{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "pretty": true,
    "jsx": "react",
    "outDir": "core/assets/compiled"
  },
  "filesGlob": [
    "core/js/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tasks",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "core/js/actions/index.ts",
    "core/js/test/CALL_API.d.ts",
    "core/js/test/index.d.ts",
    "core/js/test/middleware.d.ts",
    "core/js/test/util.d.ts",
    "core/js/test/validation.d.ts",
    "core/js/utils/constants.ts",
    "typings/globals/chai/index.d.ts",
    "typings/globals/github-electron/index.d.ts",
    "typings/globals/lodash/index.d.ts",
    "typings/globals/mocha/index.d.ts",
    "typings/globals/node/index.d.ts",
    "typings/globals/react/index.d.ts",
    "typings/index.d.ts",
    "typings/modules/chai/index.d.ts",
    "typings/modules/lodash/index.d.ts",
    "typings/modules/react-redux/index.d.ts",
    "typings/modules/redux-api-middleware/index.d.ts",
    "typings/modules/redux/index.d.ts"
  ]
}
